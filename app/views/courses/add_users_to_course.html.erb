<p id="notice"><%= notice %></p>
<div class="card" style="max-width: 80rem; min-height: 30rem">
  <h5 class="card-header card--header--title">Add Attendants To Course: <%= @course.name %>
    <%= link_to 'Back', courses_users_of_course_path(@course), class:"btn btn--primary2--header--button" %>
  </h5>
  <div class="card-body">
    <h5 class="card--title">List of users from this school: <b><i><%= current_user.school.name %></i></b></h5><br />
        <div class="card-text">
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead class="table">
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Administrator</th>
                        <th>Teacher</th>
                        <th>Student</th>
                        <th>Add</th>
                        <th>Remove</th>
                    </tr>
                </thead>

                <tbody>
                    <%@users.each do |user| %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.administrator %></td>
                        <td><%= user.teacher %></td>
                        <td><%= user.student %></td>
                        <% if UsersCourse.find_by_course_id_and_user_id(@course.id, user.id) == nil%>
                            <td><%= link_to '+', courses_assign_user_to_course_url(id: @course, user_id: user), method: :assign_user_to_course, class:"btn btn--primary2--table" %></td>
                        <% else %>
                            <td></td>
                            <td>
                                <%= link_to '-', courses_remove_user_from_course_url(id: @course, user_id: user), method: :remove_user_from_course, class:"btn btn--primary2--table" %>
                            </td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
  </div>
</div>