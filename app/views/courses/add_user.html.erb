<p id="notice"><%= notice %></p>
<div class="card" style="max-width: 80rem; min-height: 30rem">
  <h5 class="card-header card--header--title">Add Users To Course</h5>
  <div class="card-body">
    <h5 class="card--title">List of users from this school:</h5><br />
        <div class="table-responsive">
            <table class="table">
                <thead class="table">
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Administrator</th>
                        <th>Teacher</th>
                        <th>Student</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <%@users.each do |user| %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.administrator %></td>
                        <td><%= user.teacher %></td>
                        <td><%= user.student %></td>
                        <td><%#= user 'Show', user %></td>
                        
                        <td><%#= link_to 'Edit', edit_friend_path(friend) %></td>
                        <td><%#= link_to 'Destroy', user, //there is no user_path//,method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
  </div>
</div>