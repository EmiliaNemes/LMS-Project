<p id="notice"><%= notice %></p>

<h1>Quiz Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Is correct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_answers.each do |quiz_answer| %>
      <tr>
        <td><%= quiz_answer.question_id %></td>
        <td><%= quiz_answer.answer %></td>
        <td><%= quiz_answer.is_correct %></td>
        <td><%= link_to 'Show', quiz_answer %></td>
        <td><%= link_to 'Edit', edit_quiz_answer_path(quiz_answer) %></td>
        <td><%= link_to 'Destroy', quiz_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz Answer', new_quiz_answer_path %>
