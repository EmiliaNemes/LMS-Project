<%= form_with(model: quiz_answer) do |form| %>
  <% if quiz_answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quiz_answer.errors.count, "error") %> prohibited this quiz_answer from being saved:</h2>

      <ul>
        <% quiz_answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>
      <strong>Question:</strong>
      <%= QuizQuestion.find(session[:quiz_question_id]).question %>
    </p>
  </div>

  <div class="field space--field">
    <%= form.label "Answer: " %>
    <%= form.text_field :answer %>
  </div>

  <div class="field">
    <%= form.label "Is it correct?" %>
    <%= form.check_box :is_correct %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn--primary2--res" %>
  </div>
<% end %>
