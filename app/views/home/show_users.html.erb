<div class="card" style="max-width: 80rem; min-height: 30rem">
    <h5 class="card-header card--header--title">All Users</h5>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="table">
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Administrator</th>
                        <th>Teacher</th>
                        <th>Student</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.each do |user| %>
                    <% if user.school == current_user.school %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.administrator %></td>
                        <td><%= user.teacher %></td>
                        <td><%= user.student %></td>
                        <td><%#= user 'Show', user %></td>
                        
                        <td><%#= link_to 'Edit', edit_friend_path(friend) %></td>
                        <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>

            <%= link_to 'Add User', users_adding_add_users_manually_path, class:"btn btn--primary2" %>
            <%= link_to 'Cancel', home_dashboard_path, class:"btn btn--primary2" %>
        </div>
    </div>
</div>