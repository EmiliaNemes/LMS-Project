<p id="notice"><%= notice %></p>

<h1>Quizes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizes.each do |quize| %>
      <tr>
        <td><%= quize.name %></td>
        <td><%= quize.description %></td>
        <td><%= quize.student_id %></td>
        <td><%= link_to 'Show', quize %></td>
        <td><%= link_to 'Edit', edit_quize_path(quize) %></td>
        <td><%= link_to 'Destroy', quize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quize', new_quize_path %>
